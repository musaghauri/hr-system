{
    "presets": [
        "next/babel"
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "root": [
                    "./src"
                ],
                "alias": {
                    "@components": "./src/components",
                    "@config": "./config",
                    "@redux": "./src/redux",
                    "@store": "./src/store"
                    // "@theme": "./src/theme"
                }
            }
        ],
        [
            "styled-components",
            {
                "ssr": true
            }
        ]
    ]
}