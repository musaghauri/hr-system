{
  "presets": ["next/babel"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@components": "./src/components",
          "@config": "./config",
          "@redux": "./src/redux",
          "@store": "./src/store",
          "@server": "./server",
          "@assets": "./src/assets",
          "@cookie": "./utils/cookie"
          // "@theme": "./src/theme"
        }
      }
    ],
    [
      "styled-components",
      {
        "ssr": true
      }
    ]
  ]
}
